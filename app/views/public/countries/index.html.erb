<h1>Public::Countries#index</h1>

<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @countries.each do |country| %>
            <tr>
              <td>
                <%= link_to admin_country_path(country) do %>
                  <%= image_tag country.get_flag_image(100,50) %>
                <% end %>
              </td>
              <td>
                <%= country.name %>
              </td>
              <td>
                <%= link_to "details", country_path(country), class:"btn btn-block btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
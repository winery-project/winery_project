<h1>会員情報編集</h1>
<p>ここではあなたの登録した情報を編集できます．</p>
<% if @customer.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= @customer.errors.count %> errors prohibited this obj from being saved:
    </h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @customer do |f| %>
  <div class="container">
    <div class="row">
      <div class="form-group">
        <div class="row">
          <div class="col-sm-2">カナ</div>
          <div class="col-sm-4">
            <%= f.text_field :last_name_kana, class:"form-control" %>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :first_name_kana, class:"form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="row">
          <div class="col-sm-2">名前</div>
          <div class="col-sm-4">
            <%= f.text_field :last_name, class:"form-control" %>
          </div>
          <div class="col-sm-4">
            <%= f.text_field :first_name, class:"form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label for="phone_number" class="col-sm-2">電話番号</label>
        <div class="col-sm-10">
          <%= f.text_field :phone_number, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label for="postal_code" class="col-sm-2">郵便番号</label>
        <div class="col-sm-10">
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <label for="address" class="col-sm-2">住所</label>
        <div class="col-sm-10">
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>
    </div>
    <%= f.submit 'Update Your Information', class:"btn btn-success" %>
  </div>
<% end %>


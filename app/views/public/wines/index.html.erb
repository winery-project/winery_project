<h1>ワイン一覧</h1>
<div class="container">
  <table style="width:100%;">
    <% unless customer_signed_in? %>
      <% @wines.each do |wine| %>
        <tr>
          <td><%= image_tag wine.get_wine_image(50, 50) %></td>
          <td><%= wine.name %></td>
          <td>
            <i class="fas fa-heart"></i><%= wine.favorite_wines.count %>
          </td>
          <td><%= link_to 'Show', admin_wine_path(wine.id) %></td>
          <td><%= link_to 'Edit', edit_admin_wine_path(wine.id) %></td>
        </tr>
      <% end %>
    <% else %>
      <% @wines.each do |wine| %>
        <tr>
          <td><%= image_tag wine.get_wine_image(50, 50) %></td>
          <td><%= wine.name %></td>
          <td>￥<%= wine.price %></td>
          <td id="favorite-btns-<%= wine.id %>">
            <%= render 'public/favorite_wines/favorite', wine: wine %>
          </td>
          <td><%= link_to 'Show', wine_path(wine.id) %></td>
        </tr>
      <% end %>
    <% end %>
  </table>
</div>


<h1>Admin::Customers#show</h1>

<div class="container">
  <div class="row my-5">
    <div class="col-6 offset-1">
      <h2><%= @customer.last_name %><%= @customer.first_name%></h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 offset-1">
      <h3>Information</h3>
      <table class="table table hover">
        <tr><th>Address</th><td><%= @customer.address %></td></tr>
        <tr><th>Postal Code</th><td><%= @customer.postal_code %></td></tr>
        <tr><th>Email</th><td><%= @customer.email %></td></tr>
        <tr><th>TEL</th><td><%= @customer.phone_number %></td></tr>
        <tr>
          <th>Current Status</th>
          <td>
            <%= form_with model: @customer, url: admin_customer_path(@customer), local: true  do |f|  %>
              <%= f.select :is_active, Customer.is_actives.keys %>
              <%= f.submit "update" %>
            <% end %>
          </td>
        </tr>
      </table>

     <%= link_to "Back", admin_customers_path, class:"btn btn-secondary" %>

    </div>

  </div>

</div>
<div class="col-4 offset-md-1">
    <h3>企業新規登録フォーム</h3>
      <%= form_with model: [:admin, @company] do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.email_field :email %>
        </div>

        <div class="form-group">
          <%= f.label :phone_number %><br>
          <%= f.text_field :phone_number %>
        </div>


        <div class="form-group">
          <%= f.label :country %><br>
          <%= f.collection_select :country_id, Country.all, :id, :name, include_blank: "選択してください" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction %>
        </div>

        <div class="form-group">
          <%= f.label :logo_image %><br>
          <%= f.file_field :logo_image, acccept: '*/image' %>
        </div>

        <div class="form-group">
          <%= f.submit '送信' %>
        </div>
      <% end %>
    </div>
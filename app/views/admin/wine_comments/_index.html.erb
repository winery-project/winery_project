<table>
  <tbody>
    <% comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to customer_path(comment.customer_id), remote: true do %>
            <%= comment.customer.last_name %><%= comment.customer.first_name %>
          <% end %>
        </td>
        <td>
          <%= comment.comment %>
        </td>
        <% if comment.customer == current_customer %>
          <td>
            <%= link_to "Destroy", wine_wine_comment_path(comment.wine_id, comment.id), method: :delete, remote: true, class: 'btn btn-sm btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
